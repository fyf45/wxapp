.appraise{
   width: 100%;
  height: 100%;
  padding: 24rpx;
  background: #fafafa;
}
/* 评分 */
.appraise-rateBox{
  background-color: #ffffff;
	box-shadow: -0.5rpx 3rpx 29rpx 0rpx 
		#e1e0e0;
	border-radius: 5px;
  padding: 35rpx 30rpx;
}
.appraise-rateTitle{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}
.appraise-rateImg{
  width: 28rpx;
	height: 28rpx;
	background-color: #353535;
}
.appraise-rateText{
  font-size: 28rpx;
	color: #525252;
}
.appraise-rateList{
  padding-top: 30rpx;
  display: flex;
  flex-flow: row nowrap;
}
.appraise-rateItem{
  width: 42rpx;
	height: 38rpx;
  margin-right: 35rpx;
}
.appraise-rateItem-img{
  display: block;
  width: 100%;
  height: 100%;
}


/* 评论文本 */
.appraise-textAreaBox{
  background-color: #ffffff;
	box-shadow: -0.5rpx 3rpx 29rpx 0rpx 
		#e1e0e0;
	border-radius: 5px;
  margin-top: 24rpx; 
  padding: 30rpx;
  height: 240rpx;
}
.appraise-textArea{
  width: 100%;
  height: 100%;
  padding: 20rpx 30rpx;
  border-radius: 5px;
	border: solid 1rpx #ebe5e5;
  font-size: 24rpx;
	color: #525252;
  line-height: 40rpx;
}
.appraise-textArea-placeholder{
  font-size: 24rpx;
	color: #d9d9d9;
}


/* 完成按钮 */
.appraise-btnBox{
  width: 100%;
  display: flex;
  justify-content: flex-end;
  margin-top: 45rpx;
}
.appraise-btn{
  width: 182rpx;
	height: 66rpx;
  line-height: 66rpx;
	background-color: #ef486e;
	border-radius: 15px;
  font-size: 28rpx;
	color: #ffffff;
  text-align: center;
}


