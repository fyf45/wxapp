.commodityDetails {
  width: 100%;
  min-height: 100%;
  background: #fafafa;
}

/* 轮播图 */

.swiperNew {
  width: 100%;
  height: 500rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.commodityDetails-content {
  width: 100%;
}

/* 商品信息 */

.commodity-message {
  margin: 0 0 24rpx;
  padding: 0 24rpx;
  background-color: #fffefe;
  box-shadow: 0rpx 2rpx 29rpx 0rpx #e1e0e0;
}

.commodity-message-title {
  padding: 30rpx 0;
  font-size: 36rpx;
  letter-spacing: 0rpx;
  border-bottom: 1px solid #f1efef;
  color: rgb(144, 143, 143);
}

.commodity-messageBox-name {
  font-size: 32rpx;
  color: #000;
  padding: 21rpx 0;
}

.commodity-messageBox-numbers {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  padding-bottom: 30rpx;
}

.commodity-messageBox-numbersImg {
  width: 39rpx;
  height: 30rpx;
}

.commodity-messageBox-numbersTxt {
  font-size: 32rpx;
  font-weight: bold;
  color: #ef486e;
  padding-left: 5rpx;
}

.commodity-messageBox-numbersTxt01 {
  font-size: 28rpx;
  color: #ef486e;
}

/* 商品详情 */

.commodityDetailsBox {
  background-color: #fffefe;
  box-shadow: 0rpx 2rpx 29rpx 0rpx #e1e0e0;
}

.commodityDetails-title {
  padding: 30rpx 0 30rpx 24rpx;
  font-size: 36rpx;
  color: rgb(144, 143, 143);
}

.commodityDetailsBox-imgItem {
  display: block;
  width: 100%;
}

.addSubmit {
  width: 100%;
  height: 98rpx;
  background-color: #ef486e;
  position: fixed;
  bottom: 0;
  font-size: 32rpx;
  color: #fff;
  line-height: 95rpx;
  text-align: center;
}
.addSubmit::after{
  border: none;
}
.commodityDetailsBox-text{
  display: block;
  font-size:28rpx;
  text-align:justify;
  line-height:50rpx;
  color:#4d4d4dc7;
}
button{
  border-radius: 0;
}
