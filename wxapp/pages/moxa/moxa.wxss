.moxa {
  width: 100%;
  height: 100%;
  padding: 24rpx;
  overflow: auto;
  background:#fafafa;
}
/* 病种列表 */
.program-listBox{
  width: 100%;
  margin-top: 195rpx;
}
.program-listBox::after{
  display: block;
  content: "";
  clear: both;
}
.program-list{
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
}
.program-list view:nth-child(1) .program-item,.program-list view:nth-child(2) .program-item{
  margin-top: 0;
}
.scrollContainer {
  width: 100%;
  height: 85rpx;
  margin-top: 24rpx;
  background-color: #ffffff;
}
.moxa-item{
  height: 100%;
  border-radius: 10px;
  white-space: nowrap;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}
.moxa-txt{
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
  margin-right: 20rpx;
  padding: 0 24rpx;
  font-size: 34rpx;
  text-align: center;
}
.moxa-active{
  background-image: linear-gradient(-80deg, 
		rgba(238, 67, 105, 0.96) 0%, 
		rgba(253, 121, 161, 0.96) 100%, 
		rgba(254, 188, 208, 0.96) 100%, 
		rgba(255, 255, 255, 0.96) 100%), 
	linear-gradient(
		#ef486e, 
		#ef486e);
  border-radius: 24px;
  color: #ffffff;
}
.fixed-head{
  width: 100%;
  position: fixed;
  top: 0;
  left: 0px;
  padding: 24rpx;
  background: #fafafa;
}