/*  产品列表 */

.pro-list {
  padding: 0rpx 24rpx 0rpx;
  width: 100%;
  display: -webkit-flex;
  flex-flow: row nowrap;
}


.pro-item {
  width: 225rpx;
  height: 311rpx;
  background-color: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 3rpx 29rpx 0rpx rgba(227, 229, 231, 1);
  border-radius: 20rpx;
  margin-right: 13rpx;
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
}

.pro-item:nth-child(3n) {
  margin-right: 0;
}

.pro-item-imgBox {
  width: 226rpx;
  height: 154rpx;
}

.pro-item-img {
  display: block;
  width: 100%;
  height: 100%;
}

.pro-item-title {
  padding-top: 10rpx;
  font-size: 26rpx;
  color: rgba(0, 0, 0, 1);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.pro-item-con {
  padding: 8rpx;
  font-size: 24rpx;
  color: rgba(53, 53, 53, 0.8);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.pro-item-priceInfo {
  display: -webkit-flex;
  flex-flow: row nowrap;
  justify-content: center
}

.pro-priceInfo-discountBox {
  width: 84rpx;
  height: 36rpx;
  background-image: linear-gradient(-5deg, rgba(238, 67, 105, 0.96) 0%, rgba(253, 121, 161, 0.96) 100%, rgba(254, 188, 208, 0.96) 100%, rgba(255, 255, 255, 0.96) 100%),
                      linear-gradient(rgba(239, 72, 110, 1), rgba(239, 72, 110, 1));
  border-radius: 10px;
}

.pro-priceInfo-discountBox, .pro-priceInfo-OriginalBox {
  display: -webkit-flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
}

.pro-priceInfo-OriginalBox {
  position: relative;
  margin-left: 5rpx;
}

.pro-priceInfo-OriginalBox::after {
  content: '';
  width: 100%;
  height: 1rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.8);
  position: absolute;
  left: 0;
  bottom: 15rpx;
}

.priceInfo-discountBox-icon, .priceInfo-OriginalBox-icon {
  width: 20rpx;
  height: 16rpx;
  margin-right: 5rpx;
}

.priceInfo-discountBox-num {
  font-size: 20rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
}

.priceInfo-OriginalBox-txt, .priceInfo-OriginalBox-num {
  font-size: 19rpx;
  color: rgba(0, 0, 0, 0.8);
}
